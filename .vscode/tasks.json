{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildDesktopGL",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Platforms/ZXBox.Monogame/ZXBox.Monogame.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Restore workloads",
            "command": "dotnet",
            "type": "process",
            "args": [
                "workload restore"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}